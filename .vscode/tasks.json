{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Debug",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\build\\debug\\res\\resource.o",
                "-o",
                "${workspaceFolder}\\build\\debug\\PSD.exe",
                "-I",
                "${workspaceFolder}\\include",
                "-I",
                "C:\\Program Files (x86)\\wxWidgets\\include",
                "-I",
                "C:\\Program Files (x86)\\wxWidgets\\lib\\gcc_x64_dll\\mswud",
				"-I",
				"C:\\SQLite",
                "-L",
                "${workspaceFolder}\\lib",
                "-L",
                "C:\\Program Files (x86)\\wxWidgets\\lib\\gcc_x64_dll",
				"-L",
				"C:\\SQLite",
				"-l",
				"sqlite3",
                "-l",
                "wxmsw32ud_core",
                "-l",
                "wxbase32ud",
                "-l",
                "sfml-audio",
                "-l",
                "openal32",
                "-l",
                "sfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:\\mingw64\\bin\\g++.exe"
        },
        {
            "type": "shell",
            "label": "Release",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-mwindows",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\build\\release\\res\\resource.o",
                "-o",
                "${workspaceFolder}\\build\\release\\PSD.exe",
                "-I",
                "${workspaceFolder}\\include",
                "-I",
                "C:\\Program Files (x86)\\wxWidgets\\include",
                "-I",
                "C:\\Program Files (x86)\\wxWidgets\\lib\\gcc_x64_dll\\mswu",
                "-L",
                "C:\\Program Files (x86)\\wxWidgets\\lib\\gcc_x64_dll",
				"-I",
				"C:\\SQLite",
                "-L",
                "${workspaceFolder}\\lib",
				"-L",
				"C:\\SQLite",
				"-l",
				"sqlite3",
                "-l",
                "wxmsw32u_core",
                "-l",
                "wxbase32u",
                "-l",
                "sfml-audio",
                "-l",
                "openal32",
                "-l",
                "sfml-system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:\\mingw64\\bin\\g++.exe"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
          {
            "label": "Compile Resource File",
            "type": "shell",
            "command": "windres",
            "args": [
                "-I",
                "C:\\Users\\Elii\\Desktop\\wxWidgets",
                "${workspaceFolder}\\build\\debug\\resource.rc", // Path to your .rc file
                "${workspaceFolder}\\build\\debug\\resource.o"   // Output object file
            ],
            "problemMatcher": []
        }
    ]
}